<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                              http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>sqs-demo</id>
  <formats>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>           
      <outputDirectory>/lib</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <includes>
        <include>com.amazonaws:aws-java-sdk</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${basedir}/target</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>${project.name}-${project.version}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/lib</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>commons-logging-*.jar</include>
        <include>httpclient*.jar</include>
        <include>httpcore*.jar</include>
        <include>jackson-*.jar</include>
        <include>joda-*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/sqs-bin</directory>
      <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/sqs-log</directory>
      <outputDirectory>/log</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/test/java</directory>
      <outputDirectory>/src</outputDirectory>
      <includes>
        <include>**/*SQS*</include>
        <include>**/*SNS*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/java</directory>
      <outputDirectory>/src</outputDirectory>
      <includes>
        <include>**/*SQS*</include>
        <include>**/*SNS*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/docs/README.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
</assembly>
